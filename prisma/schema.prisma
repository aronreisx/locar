generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_WITH_SCHEMA")
}

model Category {
  id          String   @id @default(uuid())
  name        String
  description String
  created_at  DateTime @default(now())

  @@map("categories")
}

model Specification {
  id          String   @id @default(uuid())
  name        String
  description String
  created_at  DateTime @default(now())

  @@map("specifications")
}

model User {
  id             String   @id @default(uuid())
  name           String
  email          String   @unique
  password       String
  driver_license String
  avatar         String   @default("")
  admin          Boolean  @default(false)
  created_at     DateTime @default(now())

  @@map("users")
}
